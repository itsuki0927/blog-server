input BaseSearchRequest {
    current:Int
    pageSize:Int
    sortBy:String
    sortOrder:String
}

input ArticleSearchRequest {
    current:Int = 1
    pageSize:Int = 10
    sortBy:String
    sortOrder:String
    name:String
    publish:Int
    origin:Int
    banner:Int
    open:Int
    tag:String
    tagId:ID
    tagPath: String
    hot:Boolean
    recent:Boolean
}

input TagSearchRequest {
    current:Int = 1
    pageSize:Int = 10
    sortBy:String
    sortOrder:String
    name:String
}

input CommentSearchRequest {
    current:Int = 1
    pageSize:Int = 10
    sortBy:String
    sortOrder:String
    articleId:ID
    keyword:String
    state:Int
}