type Query {
    blog(path:String!): BlogDetailResponse
    blogs(search: BlogSearchRequest): SearchBlogResponse
    tags(search: TagSearchRequest): SearchTagResponse
    comments(search: CommentSearchRequest): SearchCommentResponse
    comment(id:ID!): Comment
    validateCommentAllowOperate(id: ID!, uid: String!): Boolean
    blacklist: BlackList
    summary: SiteSummaryResponse
    blogSummary: BlogSummaryResponse
    currentAdmin: Admin
}

schema {
    query: Query
    mutation: Mutation
}